extends layout

block title
	| Главная страница

block head
	script(type="text/javascript" src="//vk.com/js/api/openapi.js?113")

block headerBanner
	div.header_banner.__big
		img.header_banner_img(src="/img/header_banners/banner_2.jpg", alt="Баннер")
		div.header_banner_title
			h1.title_heading
				| #HVZKPI 2014
			div.title_text
				| - Каждый день может быть последним

block content
	div.col.col-1000.content_prm-video
		div.content_prm-video_title
			| Промо ролик
		iframe(
		src="//player.vimeo.com/video/96230372?title=0&amp;byline=0&amp;portrait=0&amp;color=cc9933",
		width="1000",
		height="562",
		frameborder="0",
		webkitallowfullscreen,
		mozallowfullscreen,
		allowfullscreen
		)
	div.col.col-640
		div
			img(src="http://placehold.it/640x300")
		div
			img(src="http://placehold.it/640x300")

	div.col.col-300
		div.widget.timetostart
			h2.widget_heading
				| До начала HVZ 2014
			div.widget_body
				| 3 дня 2 часа 7 минут

		div.widget.gamerscount
			h2.widget_heading
				| Кол-во игроков
			div.widget_body
				| #{users.length}

		div.widget.vkgroup
			div#vk_groups
				script(type="text/javascript").
					VK.Widgets.Group("vk_groups", {
						mode: 2,
						width: "300",
						height: "500",
						color3: '#2f2f2f'
					}, 70889229);